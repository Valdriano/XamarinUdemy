<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projeto04.App">
	<Application.Resources>

		<!-- Application resource dictionary -->
        <ResourceDictionary>
            <Color x:Key="CorButton">Green</Color>
            <Color x:Key="CorLabel">Blue</Color>
            <Font x:Key="Fonte">Large</Font>
            <Font x:Key="FonteM">Small</Font>

            <Style x:Key="danger" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Red"/>
                <Setter Property="Font" Value="{StaticResource Fonte}"/>
            </Style>
            <Style x:Key="infor" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Blue"/>
                <Setter Property="Font" Value="{StaticResource FonteM}"/>
            </Style>

        </ResourceDictionary>

    </Application.Resources>
</Application>