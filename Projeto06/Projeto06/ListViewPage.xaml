        <StackLayout Padding="10,30,10,30">
            <ListView ItemsSource="{Binding Pessoas}">
                <ListView.Header>
                    <Label Text="ImageCell"/>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell Text="{Binding Nome}"
                                   Detail="{Binding Sobrenome}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.Footer>
                    <Label Text="Fim da lista"/>
                </ListView.Footer>
            </ListView>
        </StackLayout>
