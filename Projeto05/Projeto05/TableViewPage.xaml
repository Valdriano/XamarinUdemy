<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projeto05.TableViewPage"
             Title="TableView">
    <ContentPage.Content>
        <StackLayout>
            <TableView Intent="Form"
                       HasUnevenRows="True">
                <TableRoot>
                    <TableSection Title="Configuração">
                        <TextCell Text="Teste"/>
                        <SwitchCell Text="Localização"/>
                        <EntryCell Label="Digite sua senha:"/>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout>
                                    <Label Text="Descrição"/>
                                    <Editor/>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </TableSection>
                    <TableSection Title="Fotos">
                        <ImageCell />
                    </TableSection>
                </TableRoot>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>